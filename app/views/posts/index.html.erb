<div class="flex flex-col items-center bg-gray-300">
  <% @posts.each do |post| %>
    <div class='flex flex-col items-center bg-white w-3/5 my-8 p-4 rounded-lg shadow-md'>
      <div class="flex justify-start space-x-4 py-2 px-2 items-center w-full">
        <div><%= image_tag post.user.photo if post.user.photo.attached? %></div>
        <div class="font-bold text-xl"><%= username(post.user_email) %></div>
        <div class="text-gray-400 text-xs italic"><%= time_ago_in_words(post.created_at) %> ago</div>
      </div>
      <div class="flex justify-center">
        <%= image_tag post.photo, class: 'md:max-w-[50%] mb-2' %>
      </div>

      <div class="flex justify-between items-center w-full">
        <div><%= render partial: "likes", locals: { post: post } %></div>
        <% if post.user == current_user %>
          <div class="flex justify-end space-x-2 mr-3">
            <%= link_to 'Edit Post', edit_post_path(post.id), class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-small rounded-lg text-sm px-2 py-1 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800' %>
            <%= link_to 'Delete Post', post_path(post.id), method: :delete, class: 'text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-small rounded-lg text-sm px-2 py-1 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800' %>
          </div>
        <% end %>
      </div>
      <div class="flex justify-start py-2 px-2 items-center w-full">
        <p><strong><%= username(post.user_email) %></strong>  <%= post.description %></p>
      </div>

      <div class="flex flex-col py-2 px-2 items-center w-full">
        <div class="flex justify-start text-sm italic w-full">Comments</div>
        <% post.comments.each do |comment| %>
          <div class="flex justify-between py-2 px-2 items-center w-full">
            <div class="flex flex-wrap max-w-md justify-start text-sm ">
              <strong><%= username(comment.user_email) %></strong>: <%= comment.body %>
            </div>
            <%= button_to 'Delete', post_comment_path(post, comment), method: :delete, class: 'text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-small rounded-lg text-sm px-2 py-1 mb-2 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800' %>
          </div>
        <% end %>
      
      </div>

      <div class="flex justify-start space-x-4 py-2 px-2 items-center w-full">
        <%= simple_form_for Comment.new, url: post_comments_path(post), method: :post do |f| %>
        <div>
          <%= f.input :body, label: 'Comment', placeholder: 'Add a comment...', label_html: {class: 'mt-1'}, input_html: {class: 'flex w-full mt-1'} %>
        </div>
        <div>
          <%= f.submit 'Post', class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800' %>
        </div>
        <% end %>

      </div>
    </div>
  

  <% end %>
</div>