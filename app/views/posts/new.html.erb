<div class="max-h-screen bg-gray-100 flex justify-center items-start py-10">
  <div class="w-full max-w-lg bg-white rounded-xl shadow-md p-6">

    <h1 class="text-3xl font-bold text-center text-[#337ab7] mb-6">
      New Post
    </h1>

    <%= simple_form_for @post, data: { controller: "post-validation", action: "submit->post-validation#validatePost" }, html: { class: "space-y-5", novalidate: true } do |f| %>

      <div>
        <%= f.input :photo,
          label_html: { class: "block mb-2 text-lg font-medium text-gray-800" },
          input_html: {
            class: "block w-full text-sm text-gray-900
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-lg file:border-0
                    file:text-sm file:font-semibold
                    file:bg-blue-50 file:text-blue-700
                    hover:file:bg-blue-100", data: { action: "change->post-validation#validatePhoto",   post_validation_target: "photoInput" }
          } %>
        <p class="text-sm text-red-600 hidden" data-post-validation-target="photoError"></p>
      </div>

      <div>
        <%= f.input :description,
          as: :text,
          label_html: { class: "block mb-2 text-lg font-medium text-gray-800" },
          input_html: {
            rows: 8,
            class: "w-full border border-gray-400 rounded-lg
                    text-sm text-gray-900 p-3
                    focus:ring-blue-500 focus:border-blue-500", data: { action: "blur->post-validation#validateDescription", post_validation_target: "descriptionInput" }
          } %>
        <p class="text-sm text-red-600 hidden" data-post-validation-target="descriptionError"></p>
      </div>

      <div class="flex justify-center">
        <%= f.submit "Post",
          class: "text-white bg-blue-700 hover:bg-blue-800
                  focus:ring-4 focus:ring-blue-300
                  font-medium rounded-lg text-lg
                  px-6 py-2 transition" %>
      </div>

    <% end %>

  </div>
</div>
