<div class="flex flex-col justify-center items-center">
  <div class="flex justify-center text-5xl text-[#337ab7] mb-6">
    <span>Sign Up</span>
  </div>

  <%= form_with(model: user, data: { controller: "user-auth-validation" }, class: "flex flex-col justify-between gap-4 w-full max-w-sm") do |form| %>

    <% if user.errors.any? %>
      <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" role="alert">
        <span class="font-medium">
          <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
        </span>
        <ul class="list-disc list-inside mt-2">
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :photo, "Avatar", class: "mb-2 text-lg font-lg text-black block" %>
      <%= form.file_field :photo,
        class: "border border-gray-400 text-black text-sm rounded-lg
                focus:ring-blue-500 focus:border-blue-500
                w-full block p-2.5" %>
    </div>

    <div>
      <%= form.label :email, nil, class: "mb-2 text-lg font-lg text-black block" %>
      <%= form.text_field :email,
        data: { action: "blur->user-auth-validation#validateEmail",
                user_auth_validation_target: "emailInput" }, 
        class: "border border-gray-400 text-black text-sm rounded-lg
                focus:ring-blue-500 focus:border-blue-500
                w-full block p-2.5" %>
      <p class="text-sm text-red-600 hidden"></p>
      
    </div>

    <div>
      <%= form.label :password, nil, class: "mb-2 text-lg font-lg text-black block" %>
      <%= form.password_field :password,
        data: { action: "blur->user-auth-validation#validatePassword",
                user_auth_validation_target: "passwordInput" },
        class: "border border-gray-400 text-black text-sm rounded-lg
                focus:ring-blue-500 focus:border-blue-500
                w-full block p-2.5" %>
      <p class="text-sm text-red-600 hidden"></p>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirm Password",
        class: "mb-2 text-lg font-lg text-black block" %>
      <%= form.password_field :password_confirmation,
        data: { action: "blur->user-auth-validation#validatePasswordConfirmation",
                user_auth_validation_target: "passwordConfirmationInput" },
        class: "border border-gray-400 text-black text-sm rounded-lg
                focus:ring-blue-500 focus:border-blue-500
                w-full block p-2.5" %>
      <p class="text-sm text-red-600 hidden"></p>
    </div>

    <div class="flex justify-center">
      <%= form.submit "Sign Up",
        class: "text-white mt-2 bg-blue-700 hover:bg-blue-800
                focus:ring-4 focus:outline-none focus:ring-blue-300
                font-lg rounded-lg text-lg sm:w-auto
                px-4 py-2 text-center" %>
    </div>

  <% end %>
</div>
