<div class="max-h-screen bg-gray-100 flex justify-center py-10">
  <div class="w-full max-w-2xl bg-white rounded-xl shadow-md p-6">

    <div class="flex flex-col items-center text-center mb-8">
      <% if @user.photo.attached? %>
        <%= image_tag @user.photo,
          class: "w-28 h-28 rounded-full object-cover border-4 border-blue-100 mb-4" %>
      <% else %>
        <div class="w-28 h-28 rounded-full bg-gray-300 flex items-center justify-center text-gray-600 mb-4">
          No Photo
        </div>
      <% end %>

      <p class="text-2xl font-semibold text-gray-800">
        <%= username(@user.email) %>
      </p>

      <p class="text-gray-500 mt-1">
        <%= pluralize(@user.posts.count, 'post') %>
      </p>

      <p class="mt-3 text-sm text-blue-600">
        Login to create or view posts
      </p>
    </div>

    <div class="border-t mb-6"></div>

    <% if @user.posts.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <% @user.posts.each do |post| %>
          <div class="rounded-lg overflow-hidden shadow-sm border">
            <%= image_tag post.photo,
              class: "w-full h-48 object-cover hover:scale-105 transition-transform duration-200" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center text-gray-500">
        No posts yet.
      </p>
    <% end %>

  </div>
</div>
